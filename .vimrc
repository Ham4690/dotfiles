" show line number
set number
" convert tabs to spaces
set expandtab
" display width of tab characters other than the beginning of a line (number of spaces)
set tabstop=2
" display width of tab characters at the beginning of a line
set shiftwidth=2
" auto indent
set autoindent
" highlight search
set hlsearch
" find target strings sequentially when entering a search string
set incsearch
" Replace <Esc> with jj
inoremap jj <Esc>
" syntax on
syntax enable
